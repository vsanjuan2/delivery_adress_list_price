<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="paartner_view_form" model="ir.ui.view">
            <field name="name">partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='sales_purchases']/group/group[4]" position="after">
                        <group>
                            <field name="delivery_pricelist_id" attrs="{'invisible': [('parent_id', '=', False)]}"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
